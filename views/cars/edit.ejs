<section class="bg-light py-3 py-md-5 py-xl-8">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
        <h2 class="mb-4 display-5 text-center">Edit Car</h2>

        <hr class="w-50 mx-auto mb-5 mb-xl-9 border-dark-subtle" />
      </div>
    </div>
  </div>

  <!--  -->
  <div class="container">
    <div class="row">
      <div class="col-12 mb-3 mb-lg-5">
        <form action="/cars/<%= car._id %>?_method=PUT" method="POST">
          <div class="mb-3">
            <label class="form-label" for="carNumber">Plate Number:</label>
            <input
              class="form-control"
              type="text"
              name="carNumber"
              id="carNumber"
              value="<%= car.carNumber %>"
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="make">Make:</label>
            <input
              class="form-control"
              type="text"
              name="make"
              id="make"
              value="<%= car.make %>"
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="model">Model:</label>
            <input
              class="form-control"
              type="number"
              name="model"
              id="model"
              value="<%= car.model %>"
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="color">Color:</label>
            <input
              class="form-control"
              type="text"
              name="color"
              id="color"
              value="<%= car.color %>"
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="ownerName">Owner Name:</label>
            <input
              class="form-control"
              type="text"
              name="ownerName"
              id="ownerName"
              value="<%= car.ownerName %>"
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="contactNumber"
              >Contact Number:</label
            >
            <input
              class="form-control"
              type="number"
              name="contactNumber"
              id="contactNumber"
              value="<%= car.contactNumber %>"
            />
          </div>

          <button class="btn btn-success" type="submit">Save Car</button>
        </form>
      </div>
    </div>
  </div>
</section>
