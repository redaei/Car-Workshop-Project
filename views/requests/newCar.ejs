<section class="bg-light py-3 py-md-5 py-xl-8">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
        <h2 class="mb-4 display-5 text-center">New Job: Add New Car</h2>
        <hr class="w-50 mx-auto mb-5 mb-xl-9 border-dark-subtle" />
      </div>
    </div>
  </div>

  <!--  -->
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="container-fluid">
          <div class="row gy-3 gy-md-4">
            <!--  -->
            <form action="/requests/new/<%= service._id %>" method="POST">
              <div class="mb-3">
                <label class="form-label" for="carNumber">Plate Number:</label>
                <input
                  class="form-control"
                  type="text"
                  name="carNumber"
                  id="carNumber"
                />
              </div>
              <div class="mb-3">
                <label class="form-label" for="make">Make:</label>
                <input class="form-control" type="text" name="make" id="make" />
              </div>
              <div class="mb-3">
                <label class="form-label" for="model">Model:</label>
                <input
                  class="form-control"
                  type="number"
                  name="model"
                  id="model"
                />
              </div>
              <div class="mb-3">
                <label class="form-label" for="color">Color:</label>
                <input
                  class="form-control"
                  type="text"
                  name="color"
                  id="color"
                />
              </div>
              <div class="mb-3">
                <label class="form-label" for="ownerName">Owner Name:</label>
                <input
                  class="form-control"
                  type="text"
                  name="ownerName"
                  id="ownerName"
                />
              </div>
              <div class="mb-3">
                <label class="form-label" for="contactNumber"
                  >Contact Number:</label
                >
                <input
                  class="form-control"
                  type="number"
                  name="contactNumber"
                  id="contactNumber"
                />
              </div>

              <button class="btn btn-success" type="submit">
                Add Car & Continue
              </button>
            </form>
            <!--  -->
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
